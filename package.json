{
  "name": "www",
  "description": "My personal website.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamJNavarro/www.git"
  },
  "bugs": {
    "url": "https://linear.app/adamjnavarro"
  },
  "version": "2.0.0",
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@emotion/react": "^11.11.3",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "^6.0.10",
    "@mantine/dates": "^6.0.19",
    "@mantine/hooks": "^6.0.10",
    "@mantine/next": "^6.0.21",
    "@tabler/icons-react": "^2.45.0",
    "cookies-next": "^4.1.0",
    "dayjs": "^1.11.10",
    "graphql": "^16.8.1",
    "moviedb-promise": "^4.0.3",
    "next": "^14.0.4",
    "next-seo": "^6.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@next/eslint-plugin-next": "^14.0.4",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.46",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.18.0",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-mantine": "^3.1.0",
    "eslint-config-next": "^14.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "*.config.js",
      "cypress/"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "extends": [
      "mantine",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@next/next/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "import/extensions": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --cache --fix"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 85
  },
  "private": true,
  "scripts": {
    "dev": "echo \"http://$(eval 'ipconfig getifaddr en0'):3000\" | pbcopy && next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "export": "next build && next export",
    "lint": "eslint . --ext js,ts,tsx",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "prepare": "husky install",
    "prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "cypress run"
  }
}
