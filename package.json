{
  "name": "www",
  "description": "My personal website.",
  "version": "0.1.0",
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "gray-matter": "^4.0.3",
    "next": "^11.0.1",
    "next-mdx-remote": "^3.0.4",
    "next-plausible": "^2.0.0",
    "next-seo": "^4.26.0",
    "querystring": "^0.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@cypress/react": "^5.9.2",
    "@testing-library/cypress": "^8.0.0",
    "@types/node": "^16.4.3",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "autoprefixer": "^10.3.1",
    "cypress": "^8.0.0",
    "eslint": "^7.31.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.1",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "*.config.js",
      "cypress/"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@next/next/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/jsx-sort-props": [
        "error",
        {
          "ignoreCase": false
        }
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": false,
          "natural": false
        }
      ]
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 85
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint . --ext js,ts,tsx",
    "prepare": "husky install",
    "start": "next start",
    "test": "cypress run"
  }
}
